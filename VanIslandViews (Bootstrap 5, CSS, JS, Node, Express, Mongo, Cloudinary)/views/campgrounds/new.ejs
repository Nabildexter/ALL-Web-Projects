    <% layout("layouts/boilerplate") %>  

    <div class="container justify-content-center align-items-center mt-3 mb-5">

        <div class="row">
    
            <div class="col-md-6 offset-md-3">
    
                <div class="card shadow" style="">
                    
                    <div class="card-body">
        
                        <h1 class="card-title">Create New Campground</h1>
    
                        <form action="/campgrounds" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label" for="title">Title:</label>
                                <input class="form-control" type="text" id="title" name="campground[title]" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="location">Location (nearest City and State):</label>
                                <input class="form-control type="text" id="location" name="campground[location]" required placeholder="e.g Vancouver, British Colombia">
                            </div>
            
                            <div class="mb-3">
                                <label class="form-label" for="price">Price:</label>                    
                                <div class="input-group">
                                    <span class="input-group-text" id="price-label">$ CAD</span>
                                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="image" class="form-label">Upload Images:</label>
                                <input class="form-control" type="file" id="image" name="image" multiple required>
                            </div>
            
                            <!-- <div class="mb-3">
                                <label class="form-label" for="image">Image URL:</label>
                                <input class="form-control type="text" id="location" name="campground[image]" required>
                            </div> -->
            
                            <div class="mb-3">
                                <label class="form-label" for="description">Description:</label>
                                <textarea class="form-control type="text" id="location" name="campground[description]" required></textarea>
                            </div>
            
                            <div class="mb-3">
                                <button class="btn btn-success" type="submit">Add Campground</button>
                            </div>
            
                        </form>
            
    
    
                    </div>
    
    
                </div>
    
            </div>
    
        </div>
    
    </div>